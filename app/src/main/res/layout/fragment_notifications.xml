<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.ui.menu.MenuFragment">

    <Switch
        android:id="@+id/sw_microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microphone"
        android:textOff="OFF"
        android:textOn="ON"
        android:checked="true"
        android:layout_gravity="end"
        android:switchMinWidth="56dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
        android:id="@+id/sw_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speaker"
        android:textOff="OFF"
        android:textOn="ON"
        android:checked="true"
        android:layout_gravity="end"
        android:switchMinWidth="56dp"
        android:layout_marginBottom="50dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <Button
        android:id="@+id/classicBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_botton_design_corners"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="70dp"
        android:text="Start" />

    <Button
        android:id="@+id/dailyQuestionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/custom_botton_design_corners"
        android:text="Help"/>

    <Button
        android:id="@+id/luckModeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/custom_botton_design_corners"
        android:text="Luck"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_botton_design_corners"
        android:layout_gravity="center_horizontal"
        android:text="Exit"/>

</LinearLayout>