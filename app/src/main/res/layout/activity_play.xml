<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.PlayActivity">

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/totalScoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Score:\n   0"

            />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            tools:progress="0" />

        <TextView
            android:id="@+id/questionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Question:\n   1 / 10"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:text="timer"
        android:textAppearance="@style/ShapeAppearance.MaterialComponents.Tooltip"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize = "15sp"
            android:textColor="#000000"
            android:text="Current question."

            />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/firstLineButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <com.example.triviaapp.game.ui.SubmitButton
            android:id="@+id/varA"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="Submit"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="2000"
            app:sub_btn_line_color="#3AF598"
            app:sub_btn_tick_color="@color/white"
            android:onClick="clicked"/>

        <com.example.triviaapp.game.ui.SubmitButton
            android:id="@+id/varB"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="Submit"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="2000"
            app:sub_btn_line_color="#3AF598"
            app:sub_btn_tick_color="@color/white"
            android:onClick="clicked"/>
        <com.example.triviaapp.game.ui.SubmitButton
            android:id="@+id/varC"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="Submit"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="2000"
            app:sub_btn_line_color="#3AF598"
            app:sub_btn_tick_color="@color/white"
            android:onClick="clicked"/>
        <com.example.triviaapp.game.ui.SubmitButton
            android:id="@+id/varD"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="Submit"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="2000"
            app:sub_btn_line_color="#3AF598"
            app:sub_btn_tick_color="@color/white"
            android:onClick="clicked"/>


    </LinearLayout>

    <!--View after correct Answer-->
    <Switch
        android:layout_marginTop="200dp"
        android:id="@+id/sw_microphonePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microphone"
        android:textOff="OFF"
        android:textOn="ON"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:switchMinWidth="56dp"
        android:layout_marginBottom="50dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:visibility="gone"/>

    <Button
        android:layout_margin="20dp"
        android:id="@+id/nextQuestionButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Next"
        android:visibility="gone"
        android:onClick="nextQuestionSetup"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:background="@drawable/custom_botton_design_corners"

        />

    <TextView
        android:id="@+id/questionScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question points:"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/totalScoreNextViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/totalScoreNextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total points:"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/totalScoreNextViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>