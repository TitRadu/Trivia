<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.PlayActivity">
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            tools:progress="0" />

        <TextView
            android:id="@+id/timerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:text="timer"
            android:textAppearance="@style/ShapeAppearance.MaterialComponents.Tooltip"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize = "15sp"
        android:textColor="#000000"
        android:text="Aici vom avea intrebarea curenta???"

        />

    <LinearLayout
        android:id="@+id/firstLineButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:layout_marginTop="50dp">


        <Button
            android:layout_margin="10dp"
            android:id="@+id/varA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "15sp"
            android:textColor="#000000"
            android:text="A"
            android:background="@drawable/custom_botton_design_corners"
            android:onClick="clicked"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/varB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "15sp"
            android:textColor="#000000"
            android:background="@drawable/custom_botton_design_corners"
            android:text="B"
            android:onClick="clicked"
            />
        <Button
            android:layout_margin="10dp"
            android:id="@+id/varC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "15sp"
            android:textColor="#000000"
            android:background="@drawable/custom_botton_design_corners"
            android:text="C"
            android:onClick="clicked"
            />
        <Button
            android:layout_margin="10dp"
            android:id="@+id/varD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "15sp"
            android:textColor="#000000"
            android:background="@drawable/custom_botton_design_corners"
            android:text="D"
            android:onClick="clicked"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/microphoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalScoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            android:textColor="#000000"
            android:text="Total score:0"

            />

        <TextView
            android:id="@+id/questionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:text="Question 1 / 10"

            />

    </LinearLayout>
    <!--View after correct Answer-->
    <Switch
        android:layout_marginTop="50dp"
        android:id="@+id/sw_microphonePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microphone"
        android:textOff="OFF"
        android:textOn="ON"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:switchMinWidth="56dp"
        android:layout_marginBottom="50dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:visibility="gone"/>

    <Button
        android:layout_margin="20dp"
        android:id="@+id/nextQuestionButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Next"
        android:visibility="gone"
        android:onClick="nextQuestionSetup"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:background="@drawable/custom_botton_design_corners"

        />

    <TextView
        android:id="@+id/questionScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question points:"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/totalScoreNextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total points:"
        android:textSize = "20sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>